<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>com.yuditsky.auction.controller.Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/sign_in</url-pattern>
        <url-pattern>/sign_up</url-pattern>
        <url-pattern>/greeting</url-pattern>
        <url-pattern>/sign_out</url-pattern>
        <url-pattern>/create_lot</url-pattern>
        <url-pattern>/user_lots</url-pattern>
        <url-pattern>/user_bids</url-pattern>
        <url-pattern>/awaiting_payment_lots</url-pattern>
        <url-pattern>/create_payment</url-pattern>
        <url-pattern>/user_payments</url-pattern>
        <url-pattern>/user_credits</url-pattern>
        <url-pattern>/settings</url-pattern>
        <url-pattern>/replenish_balance</url-pattern>
        <url-pattern>/proposed_auctions</url-pattern>
        <url-pattern>/users</url-pattern>
        <url-pattern>/auction</url-pattern>
        <url-pattern>/buy</url-pattern>
        <url-pattern>/show_price</url-pattern>
        <url-pattern>/change_auction_status</url-pattern>
        <url-pattern>/edit_lot</url-pattern>
        <url-pattern>/create_auction</url-pattern>
        <url-pattern>/delete_lot</url-pattern>
        <url-pattern>/deny</url-pattern>
        <url-pattern>/block</url-pattern>
        <url-pattern>/create_credit</url-pattern>
        <url-pattern>/auctions</url-pattern>
        <url-pattern>/user_balance</url-pattern>
        <url-pattern>/create_bid</url-pattern>
        <url-pattern>/update_settings</url-pattern>
        <url-pattern>/revers_auction</url-pattern>
        <url-pattern>/repay_credit</url-pattern>
        <url-pattern>/change_locale</url-pattern>
        <url-pattern>/ban</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>com.yuditsky.auction.controller.filter.AuthorizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>RoleFilter</filter-name>
        <filter-class>com.yuditsky.auction.controller.filter.RoleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RoleFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.yuditsky.auction.controller.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>LocaleFilter</filter-name>
        <filter-class>com.yuditsky.auction.controller.filter.LocaleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LocaleFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>BlockedFilter</filter-name>
        <filter-class>com.yuditsky.auction.controller.filter.BlockedFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>BlockedFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>
</web-app>