<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>com.yuditsky.auction.controller.Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/sign_in</url-pattern>
        <url-pattern>/sign_up</url-pattern>
        <url-pattern>/main</url-pattern>
        <url-pattern>/greeting</url-pattern>
        <url-pattern>/sign_out</url-pattern>
        <url-pattern>/add_new_lot</url-pattern>
        <url-pattern>/user_lots</url-pattern>
        <url-pattern>/user_bids</url-pattern>
        <url-pattern>/awaiting_payment</url-pattern>
        <url-pattern>/new_payment</url-pattern>
        <url-pattern>/user_payments</url-pattern>
        <url-pattern>/user_credits</url-pattern>
        <url-pattern>/settings</url-pattern>
    </servlet-mapping>
</web-app>